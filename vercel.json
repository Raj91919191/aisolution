{
  "version": 2,
  "name": "ai-solutions-website",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      "handle": "filesystem"
    },
    {
      "src": "/.*",
      "dest": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "functions": {
    "server/index.js": {
      "runtime": "nodejs18.x"
    }
  },
  "env": {
    "PORT": "4000",
    "JWT_SECRET": "@jwt_secret"
  }
}